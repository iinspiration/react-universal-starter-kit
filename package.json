{
  "name": "react-universal-starter-kit",
  "version": "1.0.0",
  "description": "A starter kit for getting started with React stack.",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev-ssr dev-hmr start-api",
    "dev-ssr": "better-npm-run dev",
    "dev-hmr": "webpack-dev-server --config webpack.config.dev.js",
    "postinstall": "npm run build",
    "build": "better-npm-run build",
    "start": "npm-run-all --parallel start-ssr start-api",
    "start-ssr": "better-npm-run start",
    "start-api": "node ./api/server.js"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon .",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_DISABLE_CACHE": 1
      }
    },
    "build": {
      "command": "webpack --config webpack.config.prod.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src"
      }
    },
    "start": {
      "command": "node .",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src",
        "BABEL_DISABLE_CACHE": 1
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suranartnc/react-universal-starter-kit.git"
  },
  "keywords": [
    "react",
    "redux",
    "es2015",
    "isomorphic",
    "universal",
    "webpack"
  ],
  "author": "Suranart Niamcome",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suranartnc/react-universal-starter-kit/issues"
  },
  "homepage": "https://github.com/suranartnc/react-universal-starter-kit#readme",
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-css-modules-transform": "^0.2.1",
    "babel-plugin-lodash": "^3.2.8",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.10",
    "css-loader": "^0.23.1",
    "es6-promise": "^3.2.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "faker": "^3.1.0",
    "file-loader": "^0.9.0",
    "http-proxy": "^1.14.0",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "json-server": "^0.8.16",
    "node-sass": "^3.8.0",
    "normalizr": "^2.2.1",
    "npm-run-all": "^2.3.0",
    "postcss-loader": "^0.10.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "react-router-scroll": "^0.3.1",
    "redux": "^3.5.2",
    "sass-loader": "^4.0.0",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.20"
  },
  "devDependencies": {
    "nodemon": "^1.10.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
